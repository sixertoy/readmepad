<script type="text/ng-template" id="NewProjectModal.html">
    <div class="container-fluid">
        <div class="modal-header">
            <h4 class="modal-title">
                <span class="mega-octicon octicon-cloud-upload"></span>
                <span>Importer</span>
            </h4>
        </div>
        <div class="modal-body">
            <form name="projectForm" class="form-horizontal">
                <div class="form-group">
                    <label for="project_uri" class="col-sm-2 col-md-2 control-label">Path</label>
                    <div class="col-sm-10">
                        <input id="project_uri" name="project_uri" ng-model="data.project_uri" type="text" class="form-control" ng-trim="true" placeholder="http://"/>
                    </div>
                </div>
                <div class="form-group">
                    <label for="project_name" class="col-sm-2 col-md-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input id="project_name" name="project_uri" ng-model="data.project_name" type="text" class="form-control" ng-trim="true" placeholder="" />
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer btn-group-sm">
            <button class="btn btn-primary" ng-click="onModalSubmit()">OK</button>
            <button class="btn btn-warning" ng-click="onModalCancel()">Cancel</button>
        </div>
    </div>
</script>
