<script type="text/ng-template" id="NewProjectModal.html">
    <div class="container-fluid">
        <div class="modal-header">
            <h4 class="modal-title">
                <span class="mega-octicon octicon-cloud-upload"></span>
                <span>Importer</span>
            </h4>
        </div>
        <form name="form.projectForm" class="form-horizontal" ng-submit="submitForm()" novalidate>
            <div class="modal-body">
                <div class="form-group">
                    <label for="project_name" class="col-sm-2 col-md-2 control-label">Name</label>
                    <div class="col-sm-10">
                        <input id="project_name" name="project_name" ng-model="data.name" type="text" class="form-control" ng-trim="true" placeholder="" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="project_uri" class="col-sm-2 col-md-2 control-label">Path</label>
                    <div class="col-sm-10">
                        <input type="text" id="project_uri" name="project_uri" placeholder="file | http(s) | git" ng-model="data.uri" class="form-control" ng-trim="true" ng-required="true" ng-pattern="form.project_uri_regex" />
                        <span class="valid-error" ng-show="form.projectForm.project_uri.$invalid && !form.projectForm.project_uri.$pristine">Please provide a valid file path</span>
                    </div>
                </div>
            </div>
            <div class="modal-footer btn-group-sm">
                <button type="submit" class="btn btn-primary" ng-disabled="form.projectForm.$invalid">OK</button>
                <button class="btn btn-warning" ng-click="cancel()">Cancel</button>
            </div>
        </form>
    </div>
</script>
