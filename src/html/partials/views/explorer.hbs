<div class="view sidebar col-md-3" ng-controller="SidebarController" ng-init="loadProjects()">

    <div class="menu btn-group" dropdown>
        <button type="button" class="btn btn-primary dropdown-toggle btn-sm" dropdown-toggle ng-disabled="disabled">
            <span>{{$ldim}}project.name{{$rdim}}&nbsp;<span class="caret"></span></span>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li>
                <a href="#" ng-click="openModalProject()">Ouvrir un dossier...</a>
            </li>
            <li class="divider" ng-if="projects"></li>
            <li ng-repeat="(key, project) in projects">
                <a href="#" ng-click="openProject(key)">
                    <button type="button" class="close" aria-label="Close" ng-click="removeProject(key)">&times;</button>
                    <span>{{$ldim}}key{{$rdim}}</span>
                    <small>path</small>
                </a>
            </li>
        </ul>
    </div>

    <div class="project">
        <ul>
            <li ng-repeat="page in project.items">
                <a href="" ng-click="showPage(page.link)">
                    <span>{{$ldim}}page.name{{$rdim}}</span>
                </a>
            </li>
        </ul>
    </div>

</div>
<!-- endof explorer -->
